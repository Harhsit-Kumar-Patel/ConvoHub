{
  "testEnvironment": "node",
  "transform": {},
  "globals": {
    "NODE_OPTIONS": "--experimental-vm-modules"
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/config.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "testTimeout": 10000,
  "verbose": true
}
